<section id="feature" class="bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 text-center text-lg-left">
                <h3 class="h1">{{ feature_title }}</h3>
                <p>{{ feature_caption }}</p>
            </div>
            <div class="col-lg-8 ps-xl-8">
                <div class="row mt-lg-0 mt-5">
                    {{# feature_block }}
                    <div class="col-sm-6 {{ mt }}">
                        <div class="card card-body shadow-sm border-0">
                            <div class="d-flex">
                                <div class="icon-lg text-white rounded-circle">
                                    <img src="{{ image }}">
                                </div>
                                <div class="col ps-3">
                                    <h5>{{ title }}</h5>
                                    <div class="box-content">{{ caption }}</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/ feature_block }}
                </div>
            </div>
        </div>
    </div>
</section>