{{> theme_eduhub/head }}

<body {{{ bodyattributes }}}>
{{> core/local/toast/wrapper}}
<div id="page-wrapper" class="d-print-block">

    {{{ output.standard_top_of_body_html }}}

    {{> theme_eduhub/navbar }}

    {{> theme_eduhub/frontpage/banner }}
    {{> theme_eduhub/frontpage/our-top-courses }}
    {{> theme_eduhub/frontpage/feature }}
    {{> theme_eduhub/frontpage/scholl-achievements }}
    {{> theme_eduhub/frontpage/testimonials }}

    <div id="page" data-region="mainpage" data-usertour="scroller" class="drawers drag-container bg-white d-none">
        <div id="topofscroll">
            <div id="page-content" class="d-print-block main-inner">
                <div id="region-main-box">
                    <section id="region-main" aria-label="{{#str}}content{{/str}}">
                        {{{ output.main_content }}}
                    </section>
                </div>
            </div>
        </div>
    </div>

    {{> theme_eduhub/footer }}
    
    {{{ output.standard_after_main_region_html }}}
    {{{ output.standard_end_of_body_html }}}
</div>

</body>
</html>

{{#js}}
    M.util.js_pending('theme_boost/loader');
    require(['theme_boost/loader', 'theme_boost/drawer'], function(Loader, Drawer) {
        Drawer.init();
        M.util.js_complete('theme_boost/loader');
    });
{{/js}}
